@model IndividualTaskManagement.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title.</h2>
<div class="well span8">
    <style>
        .center {
            margin: auto;
            width: 60%;
        }
    </style>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="center">Change Password Form</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group" style="margin-left:25%">
            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 " })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.OldPassword, new { @class = " col-md-4" })
            </div>
        </div>
        <div class="form-group" style="margin-left:25%">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 " })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = " col-md-4" })
            </div>
        </div>
        <div class="form-group" style="margin-left:25%">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 " })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = " col-md-4" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change password" class="btn btn-success pull-right" />
            </div>
        </div>
    }

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
