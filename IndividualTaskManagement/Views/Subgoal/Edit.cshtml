@using IndividualTaskManagement.Models
@model  EditSubgoalModel
@{
    string studentName = ViewBag.StudentName;
    ViewBag.Title = "Edit";
    int goalId = ViewBag.id;
}
<h2>Edit Subtask</h2>
<div class="well span8">
    @if (User.IsInRole("teacher"))
    {
        using (Html.BeginForm())
        {
          
            @Html.AntiForgeryToken()
            <style>
                .center {
                    margin: auto;
                    width: 60%;
                }
            </style>
            <div >
                <h4 class="center">Subtask</h4>
                <hr />
                @Html.ValidationSummary(true)
                <div class="form-group" style="margin-left:45%">
                    
                    <div class="col-md-10">
                        @Html.Label("Student's full name"+"   "+studentName)
                    </div>
                </div>
                <div class="form-group" style="margin-left:25%">
                    @Html.LabelFor(model => model.name, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.name, new { @class = " col-md-4" })
                        @Html.ValidationMessageFor(model => model.name)
                    </div>
                </div>             
                <div class="form-group" style="margin-left:25%">
                    @Html.LabelFor(model => model.endDate, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">

                        @Html.EditorFor(model => model.endDate, new { @type = "date" })
                        @Html.ValidationMessageFor(model => model.endDate)
                    </div>
                </div>
                <div class="form-group" style="margin-left:45%">
                    @Html.LabelFor(model => model.description, new { @class = "control-label col-md-2" })
                </div>
                <div class="form-group" style="margin-left:25%">
                   
                    <div class="col-md-10">
                       @Html.TextAreaFor(model => model.description, new { @class = "input-xlarge span5" })
                        @Html.ValidationMessageFor(model => model.description)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create"class="btn btn-success pull-right" />
                    </div>
                    <div class="form-actions no-color">
                        @Html.ActionLink("Вернуться", "Details/" + goalId, "Goal", new object { }, new { @class = "btn btn-primary pull-left" })
                    </div>

                </div>

            </div>

        }
       

    }
    else
    {
        <h3>
            @Html.Label("There is no access to this page")
        </h3>
    }
</div>