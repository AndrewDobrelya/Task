@model IndividualTaskManagement.Models.Goal
@{
    ViewBag.Title = "Delete";
}
@if (User.IsInRole("teacher"))
{
<h2>Delete</h2>
<div class="well span8">
    <style>
        .center {
            margin: auto;
            width: 60%;
        }
    </style>
    <h4 class="center">Вы действительно хотите удалить task?</h4>
    <div>
        <hr />
        <dl class="dl-horizontal"  style="margin-left:25%">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.StartDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.StartDate)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <div class="form-actions no-color">
                    <input type="submit" value="Удалить" class="btn btn-danger pull-right" />
                    @Html.ActionLink("Вернуться", "Index", new object { }, new { @class = "btn btn-primary pull-left" })
                </div>
            </div>
        }
    </div>
</div>
}

else
{
    <h3>
        @Html.Label("Нет доступа к этой странице")
    </h3>
}